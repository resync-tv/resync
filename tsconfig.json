{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["esnext", "ES2020", "DOM", "DOM.Iterable"],
    "outDir": "lib",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "jsx": "preserve",
    "sourceMap": true,
    "inlineSources": true,
    "types": ["vite/client", "vite-plugin-pwa/client"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "paths": {
      "@/*": ["./src/*"],
      "$/*": ["./types/*"]
    }
  },
  "include": ["backend", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
